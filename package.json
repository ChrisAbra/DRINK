{
    "name": "DRINK!",
    "description": "A drinking games website",
    "version": "0.0.1",
    "author": "Chris Abraham",
    "bugs": "https://github.com/chrisabra/DRINK/issues",
    "dependencies": {
        "compression": "^1.7.4",
        "express": "^4.17.1",
        "helmet": "^4.4.1",
        "nedb-async": "^0.1.6",
        "package.json": "^2.0.1",
        "socket.io": "^4.0.0"
    },
    "devDependencies": {
        "eslint": "^7.22.0",
        "husky": "^5.1.3",
        "lint-staged": "^10.5.4",
        "lwc-services": "^3.0.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "homepage": "https://github.com/chrisabra/DRINK",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ]
    },
    "nodemonConfig": {
        "watch": [
            "scripts/server.js",
            "src/client/**/*"
        ],
        "ext": "js html css",
        "ignore": [
            "src/**/*.spec.js",
            "src/**/*.test.js"
        ],
        "events": {
            "start": "npm run build"
        }
    },
    "repository": "chrisabra/DRINK",
    "scripts": {
        "build": "lwc-services build -m production",
        "dev": "run-p build:development serve:client",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "serve": "run-p serve:client serve:api",
        "serve:api": "node src/server/api.js",
        "serve:client": "nodemon scripts/server.js",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "run-p watch:client watch:server",
        "watch:client": "lwc-services watch",
        "watch:server": "nodemon"
    }
}